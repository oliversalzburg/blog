      "onauxclick",
      "ondevicemotion",
      "onratechange",
      "ontransitionend",
      "onscrollsnapchanging",
      "onchange",
      "onselect",
      "onbeforeinstallprompt",
      "onbeforetoggle",
      "onmouseout",
