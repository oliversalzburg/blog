      "onafterprint",
      "onblur",
      "ondurationchange",
      "ontransitionstart",
      "oncanplaythrough",
      "onanimationend",
      "onmouseleave",
      "ondragleave",
      "onplay",
      "onunhandledrejection",
      "onbeforeprint",
      "onpointercancel",
      "onsubmit",
      "ondragstart",
      "onmessage",
      "location",
      "onoffline",
      "onappinstalled",
      "onwheel",
